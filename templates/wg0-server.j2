[Interface]
Address = {{ wg_private_ip }}/24
PrivateKey = {{ wg_privatekey['content'] | b64decode }}
ListenPort = 51820
PostUp = iptables -A FORWARD -i wg0 -j ACCEPT; iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE
PostDown = iptables -D FORWARD -i wg0 -j ACCEPT; iptables -t nat -D POSTROUTING -o eth0 -j MASQUERADE

{% for item in wg_user_publickey.results %}
{% if item.item.value.remove == False %}
# {{ item.item.value.username }}
[Peer]
PublicKey = {{ item['content'] | b64decode }}
AllowedIps = {{ item.item.value.private_ip }}/24
{% endif %}
{% endfor %}